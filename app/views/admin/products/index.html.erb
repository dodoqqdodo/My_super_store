<h1> 商品列表 </h1> 
<%=link_to'新增商品', new_admin_product_path, class: 'btn btn-primary' %>
<hr />
<div class="row">
  <div class="col-md-3"> 分類 </div>
  <div class="col-md-9">
      <table class="table">
          <thead>
              <tr>
                <td>商品名稱</td>
                <td>售價</td>
                <td>狀態</td>
                <td>詳細資料</td>
                <td>編輯商品</td>
                <td>刪除</td>
              </tr>
          </thead>
          <tbody>
              <% @products.each do |product| %>
              <tr>
                <td> <%= product.name %>  </td>
                <td> <%= product.price %> </td>
                <td> <%= online_status(product) %> </td> <!-- 寫在helper的方法 -->
                <td> <%= link_to '詳細資料', admin_product_path(product), class: 'btn btn-xs btn-success' %> </td>
                <td> <%= link_to '編輯商品', edit_admin_product_path(product), class: 'btn btn-xs btn-warning' %> </td>
                <td> <%= link_to '刪除', admin_product_path(product), method: :delete, data:{confirm:'確定嗎?'}, 
                        class: 'btn btn-xs btn-danger' unless can?( :manage, product) %> </td>
              </tr>
              <% end %>
          </tbody>
      </table>
  </div>
</div>