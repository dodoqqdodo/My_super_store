<h1> 商品列表 </h1>


<table class="table">
          <thead>
              <tr>
                <td>商品名稱</td>
                <td>售價</td>
                <td>處理</td>
              </tr>
          </thead>
          <tbody>
              <% @products.each do |product| %>
              <tr>
                <td> <%= product.name %>  </td>
                <td> <%= product.price %> </td>
                <td> <%=link_to '放入購物車', add_cart_path(product.id), class:'btn btn-xs btn-danger', method: :post %></td>
              </tr>
              <% end %>
          </tbody>
      </table>